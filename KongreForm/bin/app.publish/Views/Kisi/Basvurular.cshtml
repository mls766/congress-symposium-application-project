@model IEnumerable<KongreForm.Models.BasvuruViewModel>
@{
    ViewBag.Title = "Basvurular";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Basvurular</h2>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>

                        <th>
                            Basvuru Kodu
                        </th>
                        <th>
                            Kongre Adı
                        </th>
                        <th>
                            Basvuru Zamanı
                        </th>
                        <th>
                            Sunum Tipi
                        </th>
                        <th>
                            Baslık
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)

                    {

                <tr>
                    <td> @item.BasvuruKodu</td>
                    <td>@item.KongreAd</td>
                    <td>@item.BasvuruZaman.ToShortDateString()</td>

                    @switch (@item.PosterMi)
                    {
                        case true:
                            <td> Poster </td>
                            break;
                        case false:
                            <td>Ozet </td>
                            break;
                        default:
                            <td>  </td>
                            break;
                    }

                    <td>@item.Baslik</td>

                    <td>
                        <div class="btn-group">
                            <a href="/Basvuru/Details?id=@item.Id"> Detay</a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="/Basvuru/Edit?id=@item.Id"> Başvuru Düzenle</a>
                        </div>
                    </td>
                </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
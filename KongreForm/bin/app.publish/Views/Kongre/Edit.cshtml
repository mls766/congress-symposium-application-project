@model KongreForm.Models.Kongre

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kongreyi Duzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.KongreAd, "Kongre Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-sm-2">
            @Html.EditorFor(model => model.KongreAd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KongreAd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Baslangic, "Baslangıc Zamanı", htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-sm-3">
            <div class="input-group date" data-provide="datetimepicker">


                @Html.TextBoxFor(model => model.Baslangic, "{0:yyyy-MM-ddTHH:mm:ss}", new
           {
               @class = "form-control",
               required = "required",
               @type = "datetime-local",
               @value = DateTime.Now.ToString()
           })<br />


                @Html.ValidationMessageFor(model => model.Baslangic, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Bitis, htmlAttributes: new { @class = "control-label col-md-2 " })
        <div class="col-sm-4">
            <div class="input-group date" id="datetimepicker">
                @Html.TextBoxFor(model => model.Bitis, "{0:yyyy-MM-ddTHH:mm:ss}", new
           {
               @class = "form-control",
               required = "required",
               @type = "datetime-local",
               @value = DateTime.Now.ToString()
           })
                <br />
                @Html.ValidationMessageFor(model => model.Bitis, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>


    @*<div class="form-group">
        @Html.LabelFor(model => model.AktifMi, "Kongre Aktif Mi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.AktifMi)
                @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>*@

    <div class="form-group">
        <span class="control-label col-md-2">Kongre Aktif mi?</span>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AktifMi, new List<SelectListItem> {
     new SelectListItem{ Value = true.ToString(), Text = "Evet" },
     new SelectListItem{ Value = false.ToString(), Text = "Hayır" },
   }, "Lütfen seçim yapınız", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AktifMi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guncelle" class="btn btn-default" />
        </div>
    </div>
</div>
}


@model IEnumerable<KongreForm.Models.Yetki>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Yetki Listesi</h2>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th>
                            
                            Kongre Adı
                        </th>
                        <th>
                            <i class="icon_profile"></i>
                            Kullanıcı Email
                        </th>
                        
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                   <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kongre.KongreAd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kullanici.Email)
                    </td>
                   
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                        </div>
                    </td>
                </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>



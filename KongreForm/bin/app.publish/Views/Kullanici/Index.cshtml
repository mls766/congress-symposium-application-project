@model IEnumerable<KongreForm.Models.Kullanici>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Listesi</h2>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th>
                            <i class="icon_profile"></i>
                            Email
                        </th>
                        <th>
                            <i class="icon_name"></i>
                            @Html.DisplayNameFor(model => model.Ad)
                        </th>
                        <th>
                            <i class="icon_name"></i>
                            @Html.DisplayNameFor(model => model.Soyad)
                        </th>
                        <th>
                            
                            Kullanıcı Admin mi?
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td> @Html.DisplayFor(modelItem => item.Ad)</td>
                    <td> @Html.DisplayFor(modelItem => item.Soyad)</td>
                    <td>
                        @if (item.AdminMi)
                        {
                            <a class="btn btn-success btn-sm" href="" title="Bootstrap 3 themes generator">Evet </a>

                        }
                        else
                        {
                            <a class="btn btn-danger btn-sm" href="" title="Bootstrap 3 themes generator">Hayır</a>
                        }
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                        </div>
                    </td>
                </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
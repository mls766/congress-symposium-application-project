@model IEnumerable<KongreForm.Models.BasvuruViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Basvuru Listesi</h2>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th>
                            Ad
                        </th>
                        <th>
                            Soyad
                        </th>
                        <th>
                            Başvurulan Kongre
                        </th>
                        <th>
                            Başvuru Kodu
                        </th>

                        <th>
                            Başvurulan Zaman
                        </th>

                        <th> Üniversite </th>
                       
                        <th> Fakülte</th>
                        <th>Bölüm</th>
                        @*<th>
                            Meslek
                        </th>
                        <th> Eğitim Durumu</th>
                        <th>
                            Katılım Tipi
                        </th>*@
                        <th>
                            Basvuru Durumu
                        </th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)

                    {
                <tr>
                    <td> @item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.KongreAd</td>
                    <td>@item.BasvuruKodu</td>
                    <td>@item.BasvuruZaman.ToShortDateString() - @item.BasvuruZaman.ToShortTimeString()</td>
                    <td>@item.Universite </td>
                    <td>@item.Fakulte</td>
                    <td>@item.Bolum</td>
                    @*<td>  @item.Meslek </td>

        @switch (@item.Egitim)
        {
            case 1:
                <td>İlköğretim</td>
                break;
            case 2:
                <td>Orta Öğretim</td>
                break;
            case 3:
                <td>Lise</td>
                break;
            case 4:
                <td>Meslek Yüksek Okulu</td>
                break;
            case 5:
                <td>Üniversite</td>
                break;
            case 6:
                <td>Yüksek Lisans</td>
                break;
            case 7:
                <td>Doktora</td>
                break;

            default:
                <td></td>
                break;
        }


        @switch (@item.SunucuMu)
        {
            case true:
                <td>Sunucu</td>
                break;
            case false:
                <td>İzleyici</td>
                break;
            default:
                <td></td>
                break;
        }*@


                    <td>
                        @if (@item.Onay.HasValue)
                        {
                            if (item.Onay == true)
                            {

                                <input type="button" style="width: 90px" class="btn btn-success" value="Onaylandı">
                            }

                            else

                            {
                                <input type="button" style="width: 90px" class="btn btn-danger" value="Reddedildi">
                            }

                        }

                        else
                        {
                            <input type="button" style="width: 90px" class="btn btn-default" value="Belirsiz  ">
                        }

                    </td>
                    <td>
                        <a href="/Basvuru/Details?id=@item.Id"> Detay</a>

                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="/Basvuru/Edit?id=@item.Id"> Düzenle</a>
                        </div>
                    </td>
                </tr>

                    }

                </tbody>
            </table>
        </section>
    </div>
</div>



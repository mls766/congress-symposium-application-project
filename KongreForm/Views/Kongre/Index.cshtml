@model IEnumerable<KongreForm.Models.Kongre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kongre Listesi</h2>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th>
                            Kongre Adı
                        </th>
                        <th>
                            Aktif Mi
                        </th>
                        <th>
                            Baslangıc Tarihi
                        </th>
                        <th>
                            Baslangıc Saati
                        </th>
                        <th>
                            Bitis Tarihi
                        </th>
                        <th>
                            Bitis Saati
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @item.KongreAd
                    </td>
                    
                        @switch (@item.AktifMi)
                        {
                            case true:
                                <td> Aktif</td>
                                break;
                            case false:
                                <td> Aktif Değil</td>
                                break;
                            default:
                                <td>-</td>
                                break;

                        }



                   
                    <td>
                        @item.Baslangic.ToShortDateString()
                    </td>
                    <td>
                        @item.Baslangic.ToShortTimeString()
                    </td>
                    <td>
                        @item.Bitis.ToShortDateString()
                    </td>
                    <td>
                        @item.Bitis.ToShortTimeString()
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                    </td>
                </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

